@{
    Layout = "_Layout";
}
@using Salon.Models;
@model List<Salon.Models.Client>;

<div class="card">
    <div class="card-body">
        <h1 class="card-title text-center">Clients</h1>
    </div>
        <a href="/Client/Create" class = "button btn btn-success">Add Client</a>
</div>
<div class="card">
    <div class="card-body">
        <h3 class="card-title">Clients</h3>
        <ul>
            @foreach(Client model in Model)
            {
                <h2><li>@Html.ActionLink($"{model.Name}", "Details","Client", new { id = model.ClientId})</li></h2>
            }
        </ul>
    </div>
</div>
        @if(@Model.Count == 0)
        {
            <h2><i>There are no Clients in the Database at this time.</i></h2>
        }
        else
        {
        }