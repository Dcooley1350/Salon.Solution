@{
    Layout = "_Layout";
}
@using Salon.Models;
@model List<Salon.Models.Stylist>; 

<div class="card">
    <div class="card-body">
        <h1 class="card-title text-center">Stylists</h1>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h3 class="card-title">Stylists</h3>
        @if(@Model.Count == 0)
        {
            <h2><i>There are no Stylists in the Database at this time.</i></h2>
        }
        else
        {
        <ul>
            @foreach(Stylist model in Model)
            {
                <h2><li>@Html.ActionLink($"{model.Name},{model.Specialty}", "Details","Stylist", new { id = model.StylistId})</li></h2>
            }
        </ul>
        }
    </div>
</div>